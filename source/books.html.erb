---
title: Books
---


<ul class="book-list">
  <% data.pages.books.books_list.each do | book | %>
    <li class="book-list__list-item">

      <article class="book">

        <img
          class="book__cover"
          src="<%= book.image %>"
        />

        <div class="book__details">
          <h2><%= book.title %></h2>
          <h3 class="book__date"><%= book.date %></h3>

          <%= partial "partials/markdown/book-summary" %>

          <div class="book__purchase-links">

            <% book.purchase_links.each do | button | %>
              <li class="book__purchase-link">
                <% link_to(
                  button.path,
                  ariaLabel: button.label,
                  target: "_blank"
                  ) do %>
                  <%= image_tag(
                    button.logo,
                    class: "book__button-logo"
                  ) %>
                <% end %>
              </li>
            <% end %>

          </div>

        </div>

      </article>

    </li>
  <% end %>
</ul>
